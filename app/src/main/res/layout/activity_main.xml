<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/mainFirstFragment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        class="com.tjoeun.a20191112_01_fragment.fragments.FirstFragment"/>

    <!-- 배경 검정, 글씨 흰색인 secondFragment-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:background="#FF0000">

        <TextView
            android:id="@+id/mainFirstTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:text="첫번째 분할영역"/>

    </LinearLayout>

    <fragment
        android:id="@+id/mainSecondFragment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        class="com.tjoeun.a20191112_01_fragment.fragments.SecondFragment"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:background="#0000FF">

        <TextView
            android:id="@+id/mainSecondTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:text="두번째 분할영역"/>

    </LinearLayout>

</LinearLayout>